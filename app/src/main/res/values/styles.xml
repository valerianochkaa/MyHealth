<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_marginTop">96dp</item>
    </style>
    <style name="Header1" parent="TextTitle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="Header2" parent="Header1">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>
    <style name="Body17">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Body15" parent="Body17">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Body12">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Body17Medium" parent="Body17">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="Body15Medium" parent="Body15">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:background">@drawable/border_4dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:backgroundTint">@color/button_active</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="cornerRadius">4dp</item>
    </style>
    <style name="Button.DialogButton">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="SmallButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">84dp</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:backgroundTint">@color/card_secondary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:minWidth">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">546dp</item>
        <item name="android:backgroundTint">@color/button_active</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:tint">@color/white</item>
        <item name="srcCompat">@drawable/ic_add</item>
    </style>


    <style name="CardAddMedicines">
        <item name="android:layout_width">111dp</item>
        <item name="android:layout_height">111dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:background">@drawable/corners</item>
        <item name="android:backgroundTint">@color/card_secondary</item>
    </style>

    <style name="ItemSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_4dp</item>
        <item name="android:backgroundTint">@color/card_tertiary</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:background">@color/card_tertiary</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/text_tertiary</item>
    </style>


</resources>